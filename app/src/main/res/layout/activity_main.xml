<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/date_picker_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!-- Restaurant Name -->
        <TextView
            android:id="@+id/tvRestaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/the_wujil_resort_and_conventions_ungaran_semarang"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />


        <!-- Restaurant Image -->
        <ImageView
            android:id="@+id/ivRestaurantImage"
            android:layout_width="380dp"
            android:layout_height="210dp"
            android:layout_below="@id/tvRestaurantName"
            android:layout_centerHorizontal="true"
            android:src="@drawable/wujil"
            android:scaleType="centerCrop" />

        <!-- Icon LinearLayout -->
        <LinearLayout
            android:id="@+id/iconfieww"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivRestaurantImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp">

            <!-- Email Icon -->
            <ImageView
                android:id="@+id/ivEmailIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email"
                android:layout_marginEnd="60dp" />

            <!-- Phone Icon -->
            <ImageView
                android:id="@+id/ivPhoneIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone"
                android:layout_marginEnd="60dp" />

            <!-- Map Icon -->
            <ImageView
                android:id="@+id/ivMapIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_map" />

        </LinearLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iconfieww"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Restaurant Information"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Description Paragraph -->
        <TextView
            android:id="@+id/tvParagraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:text="Terletak di dalam area empat hektar tanaman hijau dan alam murni serta berlokasi strategis di segitiga 3 kota: Semarang, Solo dan Yogyakarta, The Wujil Resort dan Conventions â€“ dikelola oleh TAUZIA Hotel Management, menawarkan latar belakang alam yang menjadikannya tempat yang ideal untuk bisnis dan liburan."
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp" />

        <!-- Menu List Title -->
        <TextView
            android:id="@+id/list_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvParagraph"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Menu List"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Menu List Description -->
        <TextView
            android:id="@+id/tvParagraph1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_menu"
            android:text="Beberapa contoh menu yang kami tawarkan di restoran kami termasuk..."
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp" />
        <TextView
            android:id="@+id/listsatu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvParagraph1"
            android:text="1. Nasi Chicken Karage"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/listdua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listsatu"
            android:text="2. Nasi Ayam geprek sambal Vahagia"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/listtiga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listdua"
            android:text="3. Nasi Goreng Babat"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/listepat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listtiga"
            android:text="4. Bakmi goreng Wujil"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/listalamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listepat"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Alamat"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvParagraph2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listalamat"
            android:text="The Wujil Resort Dan Conventions
Jl. Raya Raya Randusari, Lopait, South Semarang,
Semarang, Jawa Tengah 50252, Indonesia"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"
            tools:ignore="ExtraText" />


<!--jam buka-->
        <TextView
            android:id="@+id/jambuka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvParagraph2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Jam Buka :"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/listsatuu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jambuka"
            android:text="= Senin        08:00 - 18:00"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/listduaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listsatuu"
            android:text=" = Selasa 08:00 - 18:00 "
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/listtigaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listduaa"
            android:text=" = Rabu 08:00 - 18:00"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/listepatt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listtigaa"
            android:text=" = Kamis 08:00 - 18:00"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/listlima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listepatt"
            android:text=" = Jumat 08:00 - 18:00"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/listenam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listlima"
            android:text=" = Sabtu 08:00 - 18:00"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/listtuju"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listenam"
            android:text=" = Minggu 08:00 - 23:00"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black" />

    </RelativeLayout>
</ScrollView>
